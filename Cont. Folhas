from PIL import Image
import os

n = 0
ignorar = {"PDF"}

local_doc = input(r"Onde est√° o arquivo?")
os.chdir(local_doc)

destino = os.path.join(local_doc, "PDF")

if "PDF" in os.listdir(local_doc):
    pass
else:
    os.makedirs(destino)

lista_docs = [x for x in os.listdir(local_doc) if x not in ignorar]

def numero_docs():
    x = int(len(lista_docs))
    return(x)


for i in range(0, numero_docs()):
    selecionado = os.listdir(local_doc)[n]
    extencao = os.path.splitext(selecionado)[1]
    selecionado_nom = os.path.splitext(selecionado)[0]

    imagem = Image.open(local_doc + "\\" + selecionado)
    img = imagem.convert('RGB')
    img.save(local_doc + "\\" + selecionado_nom + ".pdf")
    print(local_doc + "\\" + selecionado_nom + "_1" + ".pdf")
    os.rename(local_doc + "\\" + selecionado_nom + ".pdf", destino + "\\" + selecionado_nom + ".pdf")

    n += 1
